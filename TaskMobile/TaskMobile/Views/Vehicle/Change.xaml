<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:userControls="clr-namespace:TaskMobile.UserControls;assembly=TaskMobile"
             xmlns:forms="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
             ControlTemplate="{StaticResource TenarisTemplate}"
             x:Class="TaskMobile.Views.Vehicle.Change">
    <RelativeLayout x:Name="ChangeContainer" WidthRequest="492">
        <Frame HasShadow="True" BackgroundColor="White" Margin="10,10,10,-10">
            <RelativeLayout.HeightConstraint>
                <OnIdiom x:TypeArguments="Constraint" Phone="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=.80}"
                                                      Tablet="{ConstraintExpression Type=RelativeToParent, Property=Height,Factor=.60,Constant=0}" 
                                                      Desktop="{ConstraintExpression Type=RelativeToParent, Property=Height,Factor=.60,Constant=0}" />
            </RelativeLayout.HeightConstraint>
            <RelativeLayout.WidthConstraint>
                <OnIdiom x:TypeArguments="Constraint" Phone="{ConstraintExpression Type=RelativeToParent, Property=Width,Factor=.50,Constant=0}" 
                                                      Tablet="{ConstraintExpression Type=RelativeToParent, Property=Width,Factor=.40,Constant=0}" 
                                                      Desktop="{ConstraintExpression Type=RelativeToParent, Property=Width,Factor=.40,Constant=0}" />
            </RelativeLayout.WidthConstraint>
            <RelativeLayout.XConstraint>
                <OnIdiom x:TypeArguments="Constraint" Phone="{ConstraintExpression Type=RelativeToParent, Property=Width,  Factor=.25, Constant=0}" 
                                                      Tablet="{ConstraintExpression Type=RelativeToParent, Property=Width,  Factor=.30, Constant=0}"
                                                      Desktop="{ConstraintExpression Type=RelativeToParent, Property=Width,  Factor=.30, Constant=0}"/>
            </RelativeLayout.XConstraint>
            <RelativeLayout.YConstraint>
                <OnIdiom x:TypeArguments="Constraint" Phone="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=.10, Constant=0}" 
                                                      Tablet="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=.20, Constant=0}"
                                                      Desktop="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=.20, Constant=0}"/>
            </RelativeLayout.YConstraint>
           
            <StackLayout   VerticalOptions="CenterAndExpand">
                <StackLayout.Margin>
                    <OnIdiom x:TypeArguments="Thickness" Phone="10,10,10,10" Tablet="20,20,20,20"/>
                </StackLayout.Margin>
                <StackLayout.Spacing>
                    <OnIdiom x:TypeArguments="x:Double" Phone="0" 
                                                      Tablet="20"
                                                      Desktop="25"/>
                </StackLayout.Spacing>
                <Label Text="Seleccione un vehículo" Style="{StaticResource BlueNormalLabel}"/>
                <StackLayout   Orientation="Horizontal"  VerticalOptions="FillAndExpand" Spacing="30">
                    <userControls:FontAwesomeLabel Text="{x:Static userControls:Icon.Taxi}"
                                                   Margin="0,15,5,10"
                                                VerticalOptions="Center"
                                                FontSize="20"
                                                TextColor="{StaticResource Color.BluePrimary}"/>
                    <RelativeLayout>
                        
                    <Picker x:Name="VehiclePicker" HorizontalOptions="Fill"
                           
                            Title="Vehículos"
                            VerticalOptions="CenterAndExpand"
                            ItemsSource="{Binding AvailableVehicles}"
                            ItemDisplayBinding="{Binding NameToShow}"
                            SelectedItem="{Binding Vehicle}"
                            RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width,Factor=.70,Constant=0}"/>
                        <ActivityIndicator  IsVisible="{Binding IsBusy}" 
                                            IsRunning="{Binding IsBusy}"
                                            Color="{StaticResource Color.BluePrimary}"  
                                            RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width,  Factor=.30, Constant=0}"/>
                    </RelativeLayout>
                </StackLayout>
                <Button  Text="Aceptar" Margin="0,20,0,0" Command="{Binding SelectCommand}" Style="{StaticResource BtnPrincipal}" VerticalOptions="CenterAndExpand"/>
            </StackLayout>

        </Frame>
    </RelativeLayout>
